<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mad.budgetapplication">

    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="Money Assistant"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AddAssetActivity"></activity>
        <activity android:name=".RecurringTransactionActivity" />
        <activity android:name=".SharedWalletDetailsActivity" />
        <activity android:name=".JoinWalletActivity" />
        <activity android:name=".SharedWalletActivity" />
        <activity android:name=".CreateSharedWalletActivity" />
        <activity android:name=".SupportActivity" />
        <activity android:name=".WalletFormActivity" />
        <activity android:name=".ChangeUsernameActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".NotificationBroadcast" />
    </application>

</manifest>